<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Base.Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Customize your light theme here. -->
    <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    <!--    <item name="android:windowIsTranslucent">true</item>-->
  </style>

  <style name="Theme.App" parent="Base.Theme.App" />

  <style name="SplashTheme" parent="Base.Theme.App">
    <item name="android:windowBackground">@drawable/splash</item>
  </style>
  
  <style name="ExitDialog" parent="MaterialAlertDialog.Material3">
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowEnterAnimation">@anim/message_in_anim</item>
    <item name="android:windowExitAnimation">@anim/message_out_anim</item>
    <item name="android:backgroundDimEnabled">true</item>
<!--    <item name="background">@drawable/bg_dialog</item>-->
  </style>

  <style name="TranslucentTheme" parent="Theme.App">
    <item name="android:windowIsTranslucent">true</item>
  </style>

</resources>