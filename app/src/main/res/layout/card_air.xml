<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:background="@drawable/bg_card">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textColor="@color/textColorPrimary"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:text="空气质量信息" />

    <me.spica.spicaweather2.view.AirCircleProgressView
        android:id="@+id/progress_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/center_line"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_below="@id/tv_title" />

    <View
        android:id="@+id/center_line"
        android:layout_width="0dp"
        android:layout_centerInParent="true"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_c0_title"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_toRightOf="@id/center_line"
        android:layout_alignTop="@id/progress_view"
        android:layout_height="44dp"
        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
        android:text="一氧化碳" />

    <TextView
        android:id="@+id/tv_c0_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_weight="1"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/tv_c0_title"
        android:gravity="end"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:text="0微克/m³" />

    <TextView
        android:id="@+id/tv_so2_title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_toRightOf="@id/center_line"
        android:layout_marginStart="12dp"
        android:layout_below="@id/tv_c0_title"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
        android:text="二氧化硫" />

    <TextView
        android:id="@+id/tv_so2_value"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@id/tv_so2_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:gravity="end"
        android:text="0微克/m³" />



    <TextView
        android:id="@+id/tv_no2_title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_toRightOf="@id/center_line"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:layout_below="@id/tv_so2_title"
        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
        android:text="二氧化氮" />

    <TextView
        android:id="@+id/tv_no2_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:layout_alignBaseline="@id/tv_no2_title"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:gravity="end"
        android:text="0微克/m³" />


    <TextView
        android:id="@+id/tv_pm25_title"
        android:layout_width="wrap_content"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/progress_view"
        android:layout_below="@id/tv_no2_title"
        android:layout_height="44dp"
        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
        android:text="PM2.5" />

    <TextView
        android:id="@+id/tv_pm25_value"
        android:layout_width="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignBaseline="@id/tv_pm25_title"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:gravity="end"
        android:text="0微克/m³" />


</RelativeLayout>