<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motion_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layoutDescription="@xml/motion_day_weather">

    <LinearLayout
        android:id="@+id/container_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="星期二"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/icon"
            android:layout_width="55dp"
            android:layout_height="24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/min_temp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:text="0℃" />

        <me.spica.spicaweather2.view.weather_detail_card.TempProgressView
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/temp_view"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:max="100"
            android:min="0"
            android:progress="50" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/max_temp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:text="50℃" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_expand"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_right"
            android:padding="4dp"
            android:rotation="90"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_circle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_title"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_weather_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:paddingHorizontal="12dp"
            android:text="灰蒙蒙云" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_weather_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:nestedScrollingEnabled="false"
            app:spanCount="2"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />

    </LinearLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>